{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "outDir": "./dist/",

    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    // strict/linter Checks
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "alwaysStrict": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
